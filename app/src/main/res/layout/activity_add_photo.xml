<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddPhotoActivity">

    <!-- Previous image -->
    <ImageView
        android:id="@+id/previous_photo"
        android:contentDescription="@string/previous_photo_content_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"/>

    <!-- New image -->
    <ImageView
        android:id="@+id/add_photo_result"
        android:visibility="invisible"
        android:contentDescription="@string/new_photo_content_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <!-- New image label -->
    <TextView
        android:id="@+id/new_photo_textview"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/compare"
        tools:text="@string/compare"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="@dimen/textview_margin"
        app:layout_constraintStart_toEndOf="@id/compare_to_previous_fab"
        app:layout_constraintBottom_toBottomOf="@id/compare_to_previous_fab"
        app:layout_constraintTop_toTopOf="@id/compare_to_previous_fab"
        app:layout_constraintVertical_bias="0.5"/>

    <!-- take photo FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/take_photo_fab"
        android:contentDescription="@string/take_photo_fab_content_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        android:backgroundTint="@color/colorAccent"
        android:src="@drawable/ic_add_a_photo_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- return to previous activity FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/return_to_details_fab"
        android:contentDescription="@string/return_to_details_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        android:backgroundTint="@color/colorRedAccent"
        android:src="@drawable/ic_arrow_back_white_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- submit photo FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit_photo_fab"
        android:contentDescription="@string/submit_photo_fab_content_description"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        android:backgroundTint="@color/colorGreen"
        app:borderWidth="0dp"
        app:fabSize="normal"
        android:src="@drawable/ic_check_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- compare to previous FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/compare_to_previous_fab"
        android:contentDescription="@string/compare_to_previous_fab_content_description"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:fabSize="normal"
        android:src="@drawable/ic_compare_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>