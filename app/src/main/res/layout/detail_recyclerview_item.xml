<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <View
            android:id="@+id/selection_indicator"
            android:layout_width="@dimen/detail_recyclerview_selection_width"
            android:layout_height="@dimen/detail_recyclerview_selection_height"
            android:layout_gravity="center"
            android:layout_margin="@dimen/detail_margin"
            android:background="@color/colorSubtleRedAccent"
            />

        <ImageView
                android:id="@+id/detail_thumbnail"
                android:contentDescription="@string/detail_photo_content_description"
                android:layout_width="@dimen/detail_recyclerview_item_width"
                android:layout_height="@dimen/detail_recyclerview_item_height"
                android:layout_gravity="center"
                android:layout_margin="@dimen/detail_margin"
                android:background="@color/darkImagePlaceHolder"
                />

    </FrameLayout>
</layout>