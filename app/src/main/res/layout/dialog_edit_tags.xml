<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/large"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="200dp">

    <EditText
        android:id="@+id/add_tag_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <TextView
        android:id="@+id/dialog_edit_tags_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/large"
        android:textSize="22sp"
        android:layout_margin="@dimen/medium"
        android:text="Tags"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"/>

    <LinearLayout
        android:id="@+id/dialog_edit_tags_taglayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_edit_tags_title"/>

    <!-- Delete Tags -->
    <TextView
        android:id="@+id/dialog_edit_tags_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginBottom="@dimen/medium"
        android:padding="@dimen/medium"
        app:layout_goneMarginEnd="@dimen/large"
        android:src="@drawable/ic_add_white_24dp"
        android:text="@string/delete"
        android:textColor="@color/colorRedAccent"
        android:textStyle="italic|bold"
        app:layout_constraintTop_toBottomOf="@id/dialog_edit_tags_taglayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Add Tags -->
    <TextView
        android:id="@+id/dialog_edit_tags_add_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium"
        android:layout_marginBottom="@dimen/medium"
        android:padding="@dimen/medium"
        android:src="@drawable/ic_add_white_24dp"
        android:text="@string/add_tag"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic|bold"
        app:layout_constraintTop_toBottomOf="@id/dialog_edit_tags_taglayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</LinearLayout>