<?xml version="1.0" encoding="utf-8"?>
<!-- Layout containing project information -->
<layout>
    <androidx.cardview.widget.CardView android:id="@+id/project_information_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/fab_size"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/project_information_constraint_layout"
            android:padding="@dimen/detail_margin"
            android:layout_gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/details_project_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                tools:text="100"/>

            <LinearLayout
                android:id="@+id/information_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/medium"
                android:orientation="vertical"
                app:layout_constraintStart_toEndOf="@id/details_project_id"
                app:layout_constraintTop_toTopOf="@id/details_project_id">

                <TextView
                    android:id="@+id/details_project_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    tools:text="project name"/>

                <TextView
                    android:id="@+id/details_project_timespan_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="7/7/19 - 8/8/20" />
                </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/project_add_tag_FAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_black_24dp"
                android:backgroundTint="@color/white"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:layout_constraintStart_toEndOf="@id/information_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>