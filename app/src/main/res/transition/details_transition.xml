<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together">
    <slide
        android:slideEdge="end">
        <targets>
            <target android:targetId="@id/play_as_video_fab"/>
        </targets>
    </slide>

    <slide
        android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/details_recyclerview"/>
            <target android:targetId="@id/image_loading_progress"/>
        </targets>
    </slide>

    <slide
        android:slideEdge="start">
        <targets>
            <target android:targetId="@id/details_project_name_text_view"/>
            <target android:targetId="@id/details_project_day_time_textview"/>
            <target android:targetId="@id/details_project_date_textview"/>
        </targets>
    </slide>

</transitionSet>